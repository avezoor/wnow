wnow() {
    if [[ "$1" == "-d" ]]; then
        echo "[Wnow Update] This will update your ~/.wnowrc from the server."
        read -p "Proceed? (y/n): " confirm
        if [[ "$confirm" =~ ^[Yy]$ ]]; then
            TMP_SETUP=$(mktemp)
            curl -fsSL https://raw.githubusercontent.com/avezoor/wnow/main/setup -o "$TMP_SETUP"
            if [[ $? -eq 0 ]]; then
                mv "$TMP_SETUP" "$HOME/.wnowrc"
                echo "[Wnow Update] ~/.wnowrc updated successfully."
            else
                echo "[Wnow Update] Failed to download the update."
                rm -f "$TMP_SETUP"
            fi
        else
            echo "[Wnow Update] Update canceled."
        fi
    else
        echo "Usage: wnow -d"
    fi
}
